{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "declaration": true,
        "jsx": "react",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES5",
            "ES2015",
            "DOM",
            "ScriptHost"
        ]
    }
}
